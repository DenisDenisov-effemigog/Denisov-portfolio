mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/content/${path}`) class=className)

mixin nav(className, items, activeItem)
  nav(class=`${className}`)
    ul(class= `${className}__list`)
      each item, index in items
        li(class=`${className}__item` + ((index === activeItem) ? ` ${className}__item-active` : ""))
          a(class=`${className}__link` href="#")= item


mixin soc(className)
  - var social = ["insta", "vk", "github"]
      ul(class=`${className}__list`)
        each item in social
          li(class= `${className}__item`)
            a(class= `${className}__link`)
              +icon(`${item}`,`${className}__icon`)

mixin prew(className)
  - var img = ["2.jpg", "3.jpg", "4.jpg", "5.jpg",]
      ul(class=`${className}__list`)
        each item in img
          li(class= `${className}__item`)
            +image(`${item}`)

mixin ul(className, items, activeItem)
    ul(class= `${className}__list`)
      each item, index in items
        li(class=`${className}__item` + ((index === activeItem) ? ` ${className}__item-active` : ""))
          a(class=`${className}__link` href="#")= item

